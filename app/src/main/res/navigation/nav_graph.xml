<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainActivity">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.quizzie.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <activity
        android:id="@+id/questionActivity1"
        android:name="com.example.quizzie.QuestionActivity1"
        android:label="activity_question1"
        tools:layout="@layout/activity_question1" />
    <activity
        android:id="@+id/questionActivity2"
        android:name="com.example.quizzie.QuestionActivity2"
        android:label="activity_question2"
        tools:layout="@layout/activity_question2" />
    <activity
        android:id="@+id/questionActivity3"
        android:name="com.example.quizzie.QuestionActivity3"
        android:label="activity_question3"
        tools:layout="@layout/activity_question3" />
    <action
        android:id="@+id/action_nav_graph_pop"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popUpTo="@id/nav_graph"
        app:popUpToInclusive="true"
        app:popEnterAnim="@anim/nav_default_pop_enter_anim"
        app:popExitAnim="@anim/nav_default_pop_exit_anim" />
</navigation>